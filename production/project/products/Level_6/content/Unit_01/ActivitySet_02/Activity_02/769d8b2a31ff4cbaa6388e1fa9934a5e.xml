	</rubric>
	<main>
		<block class="mm_imageRight">
			<image src="p041a.png" title=""/>
			<block class="mm_wordBoxSimple">
				<list display="h" type="plain">
					<li>see</li>
					<li>hear</li>
					<li><sSpan class="mm_exampleItem">smell</sSpan></li>
					<li>taste</li>
					<li>feel</li>
				</list>
